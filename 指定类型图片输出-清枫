function main(){
    var {body} = request({
        url:"https://api.uomg.com/api/rand.img4?sort=" + s.param(1) + "&format=json",  //http://api.uomg.com/api/rand.img4",
        method:"get",
        allowredirects: false, //ç¦æ­¢é‡å®šå‘
        dataType: "json"
        })
    console.info(body)

    var data = ""
    if(body.code == 1){
        var list=body.imgurl[0]
        data = list        

    }
    s.reply(`${image(data)}`)
    
}

